pipeline {
    agent any
    parameters {
        string(name: 'person', defaultValue: 'Heman', description: 'Enter your name')
        booleanParam(name: 'Male')
        booleanParam(name: 'Female')
        choice(name: 'City', choices: ['Nagpur', 'Mumbai', 'Pune'])
    }
    stages {
        stage('Test') {
            steps {
                sh 'echo ${param.person}'
            }
        }
        stage('Approve') {
            input {
                message "Approve/Abort"
                ok "Approve"
            }
            steps {
              echo "deploy to prod"
            }   
        }
        stage('Deploy') {
            steps {
                echo "Deployed successfully"
            }
        }
        stage('Run a parallel step') {
           parallel {
             stage('test') {
               steps {
                 echo 'first step'
                }            
             }
             stage('parallel stage') {
               steps {
                 sh 'echo "Parallel step"'
                }
             }
            }
             
         }
        
    }
        post {
            always {
                echo 'Always'
            }
            failure {
                echo 'Failed'
            }
            success {
                echo 'Successful'
            }
        }   
    }
